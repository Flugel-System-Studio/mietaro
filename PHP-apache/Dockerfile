FROM php:7.1-apache


# ###########################################################
# 
# イメージ作成者
# 
# ###########################################################
MAINTAINER akihiro.toda



# ###########################################################
# 
# パッケージ
# 
# ###########################################################
RUN apt-get -y update && apt-get -y upgrade
RUN apt-get -y install vim

RUN docker-php-ext-install pdo_mysql mysqli mbstring

